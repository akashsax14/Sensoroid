<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.controller.sensoroid"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="19" />

	<uses-permission android:name="android.permission.WRITE_SETTINGS"></uses-permission>
	
    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.sensoroid.controller.HomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name="com.sensoroid.controller.AccelerometerActivity"/>
        <activity android:name="com.sensoroid.controller.AmbientLightActivity"/>
        <activity android:name="com.sensoroid.controller.ProximityActivity"/>
        <activity android:name="com.sensoroid.controller.MagnetometerActivity"/>
        <activity android:name="com.sensoroid.controller.InfoActivity"/>
        
    </application>
    
</manifest>